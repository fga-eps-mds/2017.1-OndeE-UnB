<div class="row" style="margin-top: 30px;">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <%= title %>
      </div>
      <div class="card-body">
        <%= form_for(admin, url: url, validate: true) do |f| %>
        <div class="row">
          <div class="form-group col-md-6">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'MÃ¡ximo de 20 caracteres'%>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Exemplo: seuemail@gmail.com' %>
          </div>
          <%= render 'form_password', f: f if %w(new create).include?(action_name) %>
          <div class="form-group col-md-6">
            <%= f.submit 'Salvar', class: 'btn btn-sm btn-success' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

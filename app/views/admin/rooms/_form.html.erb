<div class="card">
    <div class="row">
        <div class="col-md-5">
            <div class="card-header">
                <%= title %>
            </div>
            <div class="card-body">
                <%= form_for(room, url: url, validate: true) do |f| %>
                <div class="row">
                    <div class="form-group col-md-6">
                        <%= f.label :acronym %>
                        <%= f.text_field :acronym, class: 'form-control' %>
                    </div>
                    <div class="form-group col-md-6">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <%= f.label :building_id %>
                        <%= f.select :building_id, options_for_levels_with_plans(@plans, room.building, room.level), {}, { class: 'form-control' } %>
                    </div>
                    <div class="form-group col-md-6">
                        <%= f.label :room_type %>
                        <%= f.select :room_type, @room_types.map{ |translation, room_type| [translation, room_type] }, {}, { class: 'form-control' } %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <%= f.label :latitude %>
                        <%= f.text_field :latitude, class: 'form-control' %>
                    </div>
                    <div class="form-group col-md-6">
                        <%= f.label :longitude %>
                        <%= f.text_field :longitude, class: 'form-control' %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.hidden_field :geo_data %>
                    <%= f.hidden_field :level %>
                    <%= f.submit 'Salvar', class: 'btn btn-sm btn-success', id: "Salvar"  %>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-7">
            <div id="map" style="float: left;"></div>
        </div>
    </div>
</div>

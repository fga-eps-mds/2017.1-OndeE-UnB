<div class="row" style="margin-top: 30px;">
    <div class="col-xs-12">
      <%= notice.html_safe unless notice.blank? %>
        <div class="card card-mini">
            <div class="card-header">
                <div class="card-title">Plantas</div>
                <ul class="card-action">
                    <li>
                        <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_admin_plan_path %>
                    </li>
                </ul>
            </div>
            <div class="card-body no-padding table-responsive">
                <table class="table card-table">
                    <thead>
                        <tr>
                            <th>TÃ­tulo</th>
                            <th>Andar</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @plans.each do |plan| %>
                        <tr>
                            <td><%= plan.building.title %></td>
                            <td><%= plan.level %></td>
                            <td>
                                <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_plan_path(plan) %>
                                <%= link_to '<i class="fa fa-remove"></i>'.html_safe, admin_plan_path(plan), method: :delete, data: {
                                  confirm: 'Are you ready?',
                                  'sweet-alert-confirm': 'Alerta',
                                  'confirm-button-text': 'Sim',
                                  'confirm-button-color': '#DD6B55',
                                  'cancel-button-text': 'Cancelar',
                                  'text': 'Tem certeza que deseja apagar esta planta?'
                                } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= paginate @plans, window: 3 %>
            </div>
        </div>
    </div>
</div>

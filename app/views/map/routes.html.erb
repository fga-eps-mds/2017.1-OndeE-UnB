<form class="mt-3">
  
    <% @buildings.each do |b| %>
      Acron: <%= b.acronym %>
      <br/>
      Nome: <%= b.title %>
      <hr/>
    <% end %>
    <!-- < %= @buildings[0].title %> -->

    <div class="form-group">
        <label>Pesquisar Edifício</label>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Pesquisar" %>



    </div>

  <div class="form-group">
    <label>Local de Partida</label>
    <input type="text" name="routes[origin]" class="form-control">
  </div>

  <div class="form-group">
    <label>Local de Chegada</label>
    <input type="text" name="routes[destination]" class="form-control">
  </div>

  <div class="form-group">
    <label>Modo de Descolamento</label>
    <div class="btn-group btn-group-justified" data-toggle="buttons">
      <label class="btn btn-outline-info active">
        <input type="radio" name="route[mode]" autocomplete="off" checked>
        <i class="fa fa-blind" aria-hidden="true"></i>
        A pé
      </label>

      <label class="btn btn-outline-info">
        <input type="radio" name="route[mode]" autocomplete="off">
        <i class="fa fa-bicycle" aria-hidden="true"></i>
        Bicicleta
      </label>

      <label class="btn btn-outline-info">
        <input type="radio" name="route[mode]" autocomplete="off">
        <i class="fa fa-car" aria-hidden="true"></i>
        Carro
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-info btn-block">Obter Trajeto</button>
</form>

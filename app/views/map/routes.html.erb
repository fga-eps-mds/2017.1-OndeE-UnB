<h1 class="sidebar-header">Trajetos <a class="close"><i class="ion-close"></i></a></h1>
<div class="sidebar-body">
  <form>
    <div class="form-group">
      <label for="route[origin]">Local de Partida</label>
      <div class="input-location">
        <button type="button" class="input-current-location-btn" data-toggle="tooltip" data-placement="top" title="Usar Minha Localização">
          <i class="ion-navigate"></i>
        </button>
        <input type="text" class="origin form-control">
        <input type="hidden" id="route_origin" name="route[origin]" class="form-control">
      </div>
    </div>
    <button class="btn btn-reverse-route btn-sm btn-primary float-sm-right">
      <i class="ion-arrow-swap"></i>
    </button>
    <div class="form-group">
      <label for="route[destination]">Local de Chegada</label>
      <div class="input-location">
        <button type="button" class="input-current-location-btn" data-toggle="tooltip" data-placement="top" title="Usar Minha Localização">
          <i class="ion-navigate"></i>
        </button>
        <input type="text" class="destination form-control">
        <input type="hidden" id="route_destination" name="route[destination]"  class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label>Modo de Descolamento</label>
      <div class="btn-group btn-group-justified" data-toggle="buttons">
        <label class="btn btn-outline-info active route_mode">
          <input type="radio" name="route[mode]" value="pedestrian">
          <i class="ion-android-walk"></i>
          A pé
        </label>
        <label class="btn btn-outline-info route_mode">
          <input type="radio" name="route[mode]" value="bicycle">
          <i class="ion-android-bicycle"></i>
          Bicicleta
        </label>
        <label class="btn btn-outline-info route_mode">
          <input type="radio" name="route[mode]" value="auto">
          <i class="ion-android-car"></i>
          Carro
        </label>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" id="route_submit" class="btn btn-info btn-block">Obter Trajeto</button>
    </div>
  </form>

  <div id="itinerary" class="hide">
    <div class="row">
      <div class="col-4 text-center">
        <b>Modo</b>
        <i id="mode_icon" class="ion-android-car"></i>
        <p id="mode_text">Carro</p>
      </div>
      <div class="col-4 text-center">
        <b>Distância</b>
        <i class="ion-arrow-return-right"></i>
        <p id="distance"></p>
      </div>
      <div class="col-4 text-center">
        <b>Tempo</b>
        <i class="ion-android-time"></i>
        <p id="time"></p>
      </div>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Passo</th>
          <th>Instrução</th>
          <th>Distância</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
